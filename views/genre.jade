extends layout

block content
  main
    .container
      .row
        for book in bookList
          .col.s6.offset-s3.m4.l4
            if(user)
              a(href="/users/#{user._id}")
            else
              a(href="/auth/login")
              .card.small.hoverable.book-item(id='#{book._id}')
                span.left.card-title #{book.title}
                  |<br>
                  | - #{book.author}
                .card-content
                  |<br><br>
                  p $ #{book.price}
                .card-action
                  a(href=)



  include layout_scripts

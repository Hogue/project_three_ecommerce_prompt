extend layout

block content
    .row
      .col.s4
        form#add-order
            .input-field
                input(type="text", id="order-books-id" placeholder="Book ID")
                label(for="order-books-id") Book ID:
            |<br><br>
            button.btn.waves-effect.waves-light.swirly(type="submit") Submit
      .col.s8
        .orders
            table.striped
                thead
                    tr
                        th(data-field="order-id") Order ID
                        th(data-field="order-date") Date
                        th(data-field="order-books") Books
                        th(data-field="order-user") Delete
                tbody
                    for order in orders
                        tr.order-item(data-id="#{order._id}")
                            td #{order._id}
                            td #{order.date}
                            td #{order.books}
                            td <a class="waves-effect waves-light btn delete" data-obj-type="order">Delete</a>
    include layout_scripts


